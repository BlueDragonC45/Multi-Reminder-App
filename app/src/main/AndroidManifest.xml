<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.e13.multi_reminder_app">
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_mra"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_mra"
        android:supportsRtl="true"
        android:theme="@style/testStyle">

        <service android:name=".NotificationHandler" />
        <activity android:name=".ActiveRemindersActivity" />
        <activity android:name=".comingUpActivity" />
        <activity android:name=".ReminderCreationActivity" />
        <activity android:name=".ReminderUpdateActivity" />
        <activity android:name=".MicroActivity" />
        <activity android:name=".MesoActivity" />
        <activity android:name=".MacroActivity" />
        <activity android:name=".MainPageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
